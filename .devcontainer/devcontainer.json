{
  "name": "Tuya Local Lawnmowers Dev",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13",
  "postCreateCommand": "python3 -m pip install --upgrade pip setuptools wheel && python3 -m pip install --user -r requirements.txt && python3 -m pip install --user pre-commit ruff && pre-commit install",
  "remoteUser": "vscode",
  "remoteEnv": { "PATH": "${containerEnv:HOME}/.local/bin:${containerEnv:PATH}" },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "rust": "latest"
  },
  "containerEnv": {
    "DEVCONTAINER": "1"
  },
  "appPort": ["8123:8123"],
  "forwardPorts": [8123],
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant"
    },
    "0-8122": {
      "label": "Auto-Forwarded - Other",
      "onAutoForward": "ignore"
    },
    "8124-999999": {
      "label": "Auto-Forwarded - Other",
      "onAutoForward": "ignore"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.vscode-pylance",
        "visualstudioexptteam.vscodeintellicode",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "GitHub.vscode-pull-request-github",
        "charliermarsh.ruff",
        "ms-python.python",
        "ryanluker.vscode-coverage-gutters"
      ],
      "settings": {
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "ms-python.black-formatter",
        "python.linting.lintOnSave": true,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.eol": "\n",
        "editor.tabSize": 4,
        "files.trimTrailingWhitespace": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": true
          }
        },
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "yaml.customTags": [
          "!input scalar",
          "!secret scalar",
          "!include_dir_named scalar",
          "!include_dir_list scalar",
          "!include_dir_merge_list scalar",
          "!include_dir_merge_named scalar"
        ]
      }
    }
  }
}
